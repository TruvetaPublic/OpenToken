    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenToken-Java",
            "type": "java",
            "request": "launch",
            "mainClass": "com.truveta.opentoken.Main",
            "projectName": "opentoken",
            "args": [
                "-i",
                "resources/sample.${input:inputType}",
                "-t",
                "${input:inputType}",
                "-o",
                "lib/java/target/output.${input:outputType}",
                "-ot",
                "${input:outputType}",
                "-h",
                "HashingKey",
                "-e",
                "Secret-Encryption-Key-Goes-Here."
            ]
        },
        {
            "name": "OpenToken-Python",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lib/python/src/main/opentoken/main.py",
            "env": {
                "PYTHONPATH": "lib/python/src/main"
            },
            "args": [
                "-i",
                "resources/sample.${input:inputType}",
                "-t",
                "${input:inputType}",
                "-o",
                "lib/python/target/output.${input:outputType}",
                "-ot",
                "${input:outputType}",
                "-h",
                "HashingKey",
                "-e",
                "Secret-Encryption-Key-Goes-Here."
            ]
        }
    ],
    "inputs": [
        {
            "id": "inputType",
            "type": "pickString",
            "description": "Select input type",
            "options": [
                "csv",
                "parquet"
            ],
            "default": "csv"
        },
        {
            "id": "outputType",
            "type": "pickString",
            "description": "Select output type",
            "options": [
                "csv",
                "parquet"
            ],
            "default": "csv"
        }
    ]
}